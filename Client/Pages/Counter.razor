@page "/counter"

@using Client.Data

<h1>Counter</h1>

<p role="status">Current count: @prova.counter</p>

<button class="btn btn-primary" @onclick="prova.increment">Click me</button>

<button class="btn btn-primary" @onclick="swapcolor">Click me</button>

<div class=@divclass></div>

<div class="p-6 max-w-sm mx-auto bg-white rounded-xl shadow-md flex items-center space-x-4">
  <div class="flex-shrink-0">
    <img class="h-12 w-12" src="/img/logo.svg" alt="ChitChat Logo">
  </div>
  <div>
    <div class="text-xl font-medium text-black">ChitChat</div>
    <p class="text-gray-500">You have a new message!</p>
  </div>
</div>




@code {

	private Prova prova = new Prova();

	private bool divstatus = false;
	private string divclass = "red";

	private void swapcolor() {
		divclass = divstatus ? "red" : "green";
		divstatus = !divstatus;
	}

}
